---
import Layout from '../layouts/Layout.astro'
import api from '../api/api.json'
import Disco from '../components/Disco.astro'
---

<Layout title='Twenty One Pilots'>
    <div class="found text-white grid place-content-start place-items-center grid-cols-1">
        <h1 class="w-full text-format text-2xl md:text-5xl text-white py-2 md:py-6 text-center top-0 bg-opacity-75 bg-black mb-4 ">discos</h1>
        <section class="grid place-items-center grid-cols-2 md:grid-cols-3 2xl:grid-cols-4">
				{api.discos.map((disco) => (
					<Disco slug={disco.slug} nombre={disco.nombre} url_imagen={disco.url_imagen} />
				))}
        </section>
    </div>
</Layout>

<style>
    .found{
        background-image: url("/images/background-2.webp");
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
        background-position: center;
        min-height: 100vh;
    }
</style>