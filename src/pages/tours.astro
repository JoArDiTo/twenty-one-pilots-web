---
import Layout from '../layouts/Layout.astro'
import Tour from '../components/Tour.astro';
import api from '../api/api.json';

---

<Layout title='Twenty One Pilots'>
	<div class="found">
		<h1 class="w-full text-format text-2xl md:text-5xl text-white py-2 md:py-6 text-center sticky top-0 bg-opacity-75 bg-black">tours</h1>
		<div class="grid place-content-center">
			<div class="grid  py-5 px-12 gap-8 md:grid-cols-2 lg:grid-cols-3">
				{api.tours.map((tour) => (
					<Tour name={tour.name} dates={tour.dates} year={tour.year} />
				))}
			</div>
		</div>
	</div>
</Layout>
<style>
	.found{
        background-image: url("public/images/background-3.webp");
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
		min-height: 100vh;
    }
</style>